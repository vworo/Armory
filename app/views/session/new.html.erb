<h1>Sign in</h1>

<%= form_tag login_path do %>

    <%= label_tag :email %>
    <%= email_field_tag :email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag "Sign in", :class => 'btn btn-success' %>

<% end %>

